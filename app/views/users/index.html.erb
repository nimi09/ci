<div class="green-block">
    <div class="container">
        <div class="row">
            <h1 class="span12">Listing users</h1>

            <br>&nbsp;<br>

            <div class="span5 signup-box">

                <%= will_paginate %>

                <table>
                  <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th></th>
                    <th></th>
                    <th></th>
                  </tr>

                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= link_to 'Show', user %></td>
                    <td><%= link_to 'Edit', edit_user_path(user) %></td>
                    <% if current_user.admin? && !current_user?(user) %>
                        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    <% end %>
                  </tr>
                <% end %>
                </table>

                <%= will_paginate %>

            </div>
        </div>
    </div>
</div>
