<div class="green-block">
    <div class="container">
        <div class="row">
            <h1 class="span12">Edit your profil</h1>

            <br>&nbsp;<br>

            <div class="span5 signup-box">
                <%= form_for(@user) do |f| %>
                    <%= render 'form', f: f %>
                    <%= f.submit "Update" , class: "btn btn-primary" %>
                <% end %>

                <%= link_to 'Show', @user %> |
                <%= link_to 'Back', users_path %>
            </div>

        </div>
    </div>
</div>
